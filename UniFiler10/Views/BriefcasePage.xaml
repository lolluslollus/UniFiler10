	<RelativePanel x:Name="LayoutRoot"
		d:DataContext="{d:DesignInstance vm:BriefcaseVM, IsDesignTimeCreatable=False}">
		<!--DataContext="{x:Bind VM, Mode=OneWay}">-->

		<local:BriefcaseCoverView x:Name="BriefcaseCoverView"
            VM="{x:Bind VM, Mode=OneWay}"
			GoToBinderContentRequested="OnBriefcaseCoverView_GoToBinderContentRequested"
			GoToSettingsRequested="OnBriefcaseCoverView_GoToSettingsRequested"
			IsEnabled="{x:Bind VM.IsOpen, Mode=OneWay, FallbackValue=false}"/>

		<ctl:AnimationsControl x:Name="AnimationsControl" RelativePanel.Below="BriefcaseCoverView"/>
		<!-- animation for refresh --><!--
		<Viewbox x:Name="RefreshVB"
				 RelativePanel.Below="BriefcaseCoverView"
                Width="{StaticResource MiniatureHeight}"
                Height="{StaticResource MiniatureHeight}"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
				Visibility="Collapsed"
                Stretch="Uniform">
			<SymbolIcon x:Name="RefreshIcon" 
                        Symbol="Sync"
                        RenderTransformOrigin=".5, .5"
                        Foreground="{StaticResource DiagonalNESWBrush}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="{StaticResource ButtonPadding}">
				<SymbolIcon.RenderTransform>
					<CompositeTransform Rotation="0"/>
				</SymbolIcon.RenderTransform>
			</SymbolIcon>
		</Viewbox>

