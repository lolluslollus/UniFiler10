<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctl="using:Utilz.Controlz">

    <!-- LOLLO http://igrali.com/2012/09/17/layout-transform-in-windows-8-winrt-xaml/ -->
    
    <!-- declare this resource dictionary in App.xaml -->
    <!-- <ResourceDictionary Source="Controlz/LayoutTransformer.xaml"/> -->
    
    <!-- declare this style without x:Key so it will always be used by default -->
    <Style TargetType="ctl:LayoutTransformer">
        <Setter Property="Foreground" Value="#FF000000"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ctl:LayoutTransformer">
                    <Grid x:Name="TransformRoot" Background="{TemplateBinding Background}">
                        <ContentPresenter
							x:Name="Presenter"
							Content="{TemplateBinding Content}"
							ContentTemplate="{TemplateBinding ContentTemplate}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
